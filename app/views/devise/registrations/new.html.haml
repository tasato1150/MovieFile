.AccountPage
  .AccountPage__title
    .AccountPage__logo
      = icon("fas", "film fa-2x")
      %h2 MovieFile
    %h3 新規アカウントの作成
  .AccountPage__form
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .FormField
        .FormField__label--normal
          = f.label :name
        .FormField__input--normal
          = f.text_field :name, autofocus: true
        .error__message
          - if @user.errors.include?(:name)
            = @user.errors.full_messages_for(:name).first
      .FormField
        .FormField__label--normal
          = f.label :email
        .FormField__input--normal
          = f.email_field :email
        .error__message
          - if @user.errors.include?(:email)
            = @user.errors.full_messages_for(:email).first
      .FormField
        .FormField__label--normal
          = f.label :password
          %i (英数字8文字以上)
        .FormField__input--normal
          = f.password_field :password, autocomplete: "off"
        .error__message
          - if @user.errors.include?(:password)
            = @user.errors.full_messages_for(:password).first
      .FormField
        .FormField__label--normal
          = f.label :password_confirmation
        .FormField__input--normal
          = f.password_field :password_confirmation, autocomplete: "off"
        .error__message
          - if @user.errors.include?(:password_confirmation)
            = @user.errors.full_messages_for(:password_confirmation).first
      .actions
        = f.submit "Create Account", class: 'Button UserButton'
    .AccountPage__btn
      = render "devise/shared/links"