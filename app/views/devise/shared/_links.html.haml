- if controller_name != 'sessions'
  アカウントをお持ちの方
  = icon("fas", "arrow-circle-down fa-lg")
  = link_to "Log in", new_session_path(resource_name), class: 'Button'
  %br/
- if devise_mapping.registerable? && controller_name != 'registrations'
  アカウントをお持ちでない方
  = icon("fas", "arrow-circle-down fa-lg")
  = link_to "Sign up", new_registration_path(resource_name), class: 'Button'
  %br/
